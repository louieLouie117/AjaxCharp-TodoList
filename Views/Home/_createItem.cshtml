        <ul>
        @foreach (var item in @ViewBag.TodoListItems)
        {
        <li>@item.Item</li>
        }
        </ul> *@


    <h1>My Todo List with Ajax</h1>

    <ul id="userItems">

    </ul>

</body>

</html>